{
  "plugins": ["prettier", "vue", "jest"],
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "prettier",
    "plugin:jest/recommended"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "allow": ["name", "Promise"]
      }
    ],
    "no-console": ["off"],
    "vue/multi-word-component-names": ["off"]
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2017,
    "sourceType": "module"
  }
}
